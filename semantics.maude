*** Reduction semantics

mod SEMANTICS is
  protecting CHANSET .
  protecting SYNTAX .

  sorts EnvTrm .
  op [_]_ : Chanset Trm -> EnvTrm [frozen] .

  var CS : Chanset .
  vars P1 P1' P2 : Trm .
  var M1 M2 : SumTrm .
  var x : Qid .
  vars a b : Chan .

  rl [COM] : [a CS] a < b > . P1 + M1 | b(x) . P2 + M2 => [a CS] P1 | [x := a] P2 .
  crl [PAR] : [CS] P1 | P2 => [CS] P1' | P2 if [CS] P1 => [CS] P1' .
  crl [RES] : [CS] [x] P1 => [CS] [x] P1' if [CS] P1 => [CS] P1' .
endm
